<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="8"
        android:orientation="vertical"
        android:padding="16dp"
        android:rowCount="8"
        android:visibility="visible">

        <ImageView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowSpan="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/todo"
            android:fontFamily="sans-serif"
            android:src="@drawable/ppfbphoto"
            android:text="@string/imaj"></ImageView>

        <TextView
            android:id="@+id/tv_single_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="5dp"
            android:textColor="@color/design_default_color_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_single_item_job"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"

            />

        <TextView
            android:id="@+id/tv_single_item_price"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/price"

            />

        <TextView
            android:id="@+id/tv_single_item_city"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/city"

            />


        <Button
            android:id="@+id/button_detail_calendar_mon"
            android:layout_height="10dp"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@color/design_default_color_primary_dark"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/pzt"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_detail_calendar_tue"
            android:layout_height="10dp"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@color/design_default_color_primary_dark"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/sal"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_detail_calendar_wed"
            android:layout_height="10dp"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@color/design_default_color_primary_dark"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/car"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_detail_calendar_thur"
            android:layout_height="10dp"
            android:layout_row="4"
            android:layout_column="3"
            android:background="@color/design_default_color_primary_dark"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/pers"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_detail_calendar_fri"
            android:layout_height="10dp"
            android:layout_row="5"
            android:layout_column="0"
            android:background="@color/design_default_color_primary_dark"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/cuma"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_detail_calendar_sat"
            android:layout_height="10dp"
            android:layout_row="5"
            android:layout_column="1"
            android:background="@color/design_default_color_primary_dark"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/cmt"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_detail_calendar_sun"
            android:layout_height="0dp"
            android:layout_row="5"
            android:layout_column="2"
            android:background="@color/design_default_color_primary_dark"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/paz"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_detail_calendar_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_columnWeight="1"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:text="@string/req"
            android:textColor="@color/colorWhite" />

    </GridLayout>
</android.support.v7.widget.CardView>