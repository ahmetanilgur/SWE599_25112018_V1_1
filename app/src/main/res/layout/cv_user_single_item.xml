<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:columnCount="4"
        android:rowCount="4">
        <ImageView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_rowSpan="3"
            android:src="@drawable/ppfbphoto"
            android:layout_width ="100dp"
            android:layout_height="100dp"
            android:text         ="imaj"
            android:fontFamily   ="sans-serif"
            android:layout_column="0"
            android:layout_row="0"
            android:padding="16dp">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/tv_single_item_name"
            android:layout_column="1"
            android:layout_row="0"
            android:paddingLeft="50dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/tv_single_item_job"
            android:layout_column="1"
            android:layout_row="1"
            android:paddingLeft="50dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/tv_single_item_price"
            android:text="@string/price"
            android:layout_column="1"
            android:layout_row="2"
            android:paddingLeft="50dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/tv_single_item_city"
            android:text="@string/city"
            android:layout_column="1"
            android:layout_row="0"
            android:paddingLeft="200dp"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_columnSpan="2"
            android:text="@string/request_calendar"
            android:background="@color/design_default_color_primary_dark"
            android:textColor="@color/colorWhite"
            android:layout_column="0"
            android:layout_row="3"
            android:id="@+id/button_detail_calendar"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"

            />
    </GridLayout>
</android.support.v7.widget.CardView>